<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.olmos.ingemed.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:background="@drawable/background"
        android:cropToPadding="false"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/background_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:text="VITA RF 150"
                android:textColor="#ffffff"
                android:textSize="24.9sp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:text="POTENCIA"
                            android:textColor="#ffffff"
                            android:textSize="20sp" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.github.lzyzsd.circleprogress.ArcProgress
                                android:id="@+id/main_potencia_progress"
                                android:layout_width="214dp"
                                android:layout_height="204dp"
                                android:layout_marginBottom="20dp"
                                custom:arc_finished_color="#178880"
                                custom:arc_progress="55"
                                custom:arc_stroke_width="10dp"
                                custom:arc_text_color="#00000000"
                                custom:arc_text_size="18sp"
                                custom:arc_unfinished_color="#262f38" />

                            <TextView
                                android:id="@+id/main_potencia_usr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="20dp"
                                android:text="55%"
                                android:textColor="#ffffff"
                                android:textSize="38sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/main_btn_potencia_up"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="25dp"
                                    android:src="@drawable/arrow_up" />

                                <ImageView
                                    android:id="@+id/main_btn_pontencia_down"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/arrow_down" />

                            </LinearLayout>
                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:text="TIEMPO"
                            android:textColor="#ffffff"
                            android:textSize="20sp" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.github.lzyzsd.circleprogress.ArcProgress
                                android:id="@+id/main_time_progress"
                                android:layout_width="214dp"
                                android:layout_height="204dp"
                                android:layout_marginBottom="20dp"
                                custom:arc_finished_color="#178880"
                                custom:arc_progress="55"
                                custom:arc_stroke_width="10dp"
                                custom:arc_text_color="#00000000"
                                custom:arc_text_size="18sp"
                                custom:arc_unfinished_color="#262f38" />

                            <TextView
                                android:id="@+id/main_time_usr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="20dp"
                                android:text="0:00:00"
                                android:textColor="#ffffff"
                                android:textSize="38sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/main_btn_tiempo_up"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="25dp"
                                    android:src="@drawable/arrow_up" />

                                <ImageView
                                    android:id="@+id/main_btn_tiempo_down"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/arrow_down" />

                            </LinearLayout>
                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:background="#5b636b" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="100dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/main_resistivo_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:text="RESISTIVO"
                                android:textColor="#ffffff"
                                android:textSize="20sp" />

                            <FrameLayout
                                android:id="@+id/main_resistivo_line"
                                android:layout_width="120dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:background="#8ef1a0" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/main_capacitivo_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:text="CAPACITIVO"
                                android:textColor="#33ffffff"
                                android:textSize="20sp" />

                            <FrameLayout
                                android:id="@+id/main_capacitivo_line"
                                android:layout_width="120dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:background="#8ef1a0" />
                        </LinearLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#5b636b" />

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Tratamiento"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/main_tratamiento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="CELULITIS"
                            android:textColor="#ffffff"
                            android:textSize="20sp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="75dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/main_play"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/button_bkg"
                        android:src="@drawable/ic_play_arrow_black_48dp"
                        android:tint="#000000" />

                    <ImageButton
                        android:id="@+id/main_stop"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/button_bkg"
                        android:src="@drawable/ic_stop_black_24dp" />

                    <Button
                        android:id="@+id/main_modo_manual"
                        android:layout_width="160dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_bkg"
                        android:text="Modo Manual"
                        android:textColor="#ffffff"
                        android:textSize="27sp" />

                    <ImageButton
                        android:id="@+id/main_menu"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_bkg"
                        android:src="@drawable/ic_menu_black_24dp" />

                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@drawable/inner_shadow_bkg">

                    <FrameLayout
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/circle_dot" />

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="100dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:text="Potencia"
                            android:textColor="#ffffff"
                            android:textSize="20sp" />

                        <FrameLayout
                            android:layout_width="60dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="#8ef1a0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="50dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/main_potencia_leida"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#ffffff"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:text="W/VA"
                            android:textColor="#ffffff"
                            android:textSize="35sp" />
                    </LinearLayout>


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/inner_shadow_bkg">

                    <FrameLayout
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/circle_dot" />

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="100dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:text="Corriente"
                            android:textColor="#ffffff"
                            android:textSize="20sp" />

                        <FrameLayout
                            android:layout_width="60dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="#8ef1a0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="70dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/main_corriente_leida"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#ffffff"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:text="mA"
                            android:textColor="#ffffff"
                            android:textSize="35sp" />
                    </LinearLayout>


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/inner_shadow_bkg">

                    <FrameLayout
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/circle_dot" />

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="100dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:text="Impedancia"
                            android:textColor="#ffffff"
                            android:textSize="20sp" />

                        <FrameLayout
                            android:layout_width="60dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="#8ef1a0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="90dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/main_impedancia_leida"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#ffffff"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:text="Ω"
                            android:textColor="#ffffff"
                            android:textSize="35sp" />
                    </LinearLayout>


                </FrameLayout>

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

